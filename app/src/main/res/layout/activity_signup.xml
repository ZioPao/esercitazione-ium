<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A8E3F2FD"
    tools:context=".SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="416dp"
                    android:layout_height="133dp"
                    android:adjustViewBounds="false"
                    android:cropToPadding="false"
                    android:scaleType="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/gradient_login" />

                <TextView
                    android:id="@+id/farsabook_logo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowRadius="3"
                    android:text="Benvenuto in Farsabook"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tip_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="84dp"
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowRadius="3"
                    android:text="Effettua la registrazione"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.065"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:gravity="center_horizontal"
                        android:shadowColor="#000000"
                        android:shadowRadius="1"
                        android:text="Inserire i dati"
                        android:textAllCaps="false"
                        android:textColor="#9FA8DA"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Username"
                        android:textColor="#000"
                        android:textSize="22dp" />

                    <EditText
                        android:id="@+id/username_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Inserire username"
                        android:textColor="#000"
                        android:textSize="15sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Password"
                        android:textColor="#000"
                        android:textSize="25sp" />


                    <EditText
                        android:id="@+id/password_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Inserire password"
                        android:inputType="textPassword"
                        android:textColor="#000"
                        android:textSize="15sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Conferma password"
                        android:textColor="#000"
                        android:textSize="25sp" />


                    <EditText
                        android:id="@+id/password_repeat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Inserire di nuovo la password"
                        android:inputType="textPassword"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Città di provenienza"
                        android:textColor="#000"
                        android:textSize="25sp" />


                    <EditText
                        android:id="@+id/city_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Inserire la città di provenienza"
                        android:textColor="#000"
                        android:textSize="15sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Data di nascita"
                        android:textColor="#000"
                        android:textSize="25sp" />


                    <EditText
                        android:id="@+id/date_choice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Indicare una data"
                        android:inputType="date"
                        android:textColor="#000"
                        android:textSize="15sp" />


                    <Button
                        android:id="@+id/register_button"
                        android:layout_width="232dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Registrati"
                        android:textColorLink="#DD3737"
                        android:textSize="25sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="29dp" />

                    <Button
                        android:id="@+id/login_button_from_register"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="right"
                        android:background="#FFFFFF"
                        android:text="@string/loginTip"
                        android:textAllCaps="false"
                        android:textColor="#9575CD"
                        android:textSize="15dp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
